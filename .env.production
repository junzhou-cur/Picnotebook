# Production Environment Variables for EC2
FLASK_ENV=production
DATABASE_URL=sqlite:///lab_notebook_production.db

# Security Keys - IMPORTANT: Change these to secure random strings!
SECRET_KEY=prod-secret-key-$(date +%s)-change-this-secure-random
JWT_SECRET_KEY=jwt-prod-secret-$(date +%s)-change-this-secure-random

# API Configuration for Frontend
NEXT_PUBLIC_API_BASE_URL=http://3.150.3.60
NEXT_PUBLIC_AUTH_SERVICE_URL=http://3.150.3.60:5000
NEXT_PUBLIC_API_URL=http://3.150.3.60:5000
NEXT_PUBLIC_CORE_SERVICE_URL=http://3.150.3.60:5000
NEXT_PUBLIC_LEGACY_API_URL=http://3.150.3.60:5000

# Email Configuration (Optional - for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=PicNotebook <noreply@picnotebook.com>

# Celery Configuration (if using Redis on EC2)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Upload Configuration
MAX_CONTENT_LENGTH=52428800
UPLOAD_FOLDER=/var/www/picnotebook/uploads
PROJECTS_FOLDER=/var/www/picnotebook/projects